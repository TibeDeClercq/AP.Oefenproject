@model AP.Oefenproject.WebApp.Models.Circuit

<form method="post" asp-action="DeletePost">
    <input asp-for="Circuit_id" hidden/>
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Circuit</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Circuit_name"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Country_id"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Province"></label>
                    </div>
                    <div class="col">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Street"></label>
                    </div>
                    <div class="col">
                        <label asp-for="House_number"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Length"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <input asp-for="Circuit_name" disabled class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Country_id" disabled class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Province" disabled class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="City" disabled class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Street" disabled class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="House_number" disabled class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Length" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}