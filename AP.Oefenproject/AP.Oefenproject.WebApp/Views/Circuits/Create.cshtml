@model AP.Oefenproject.WebApp.Models.Circuit

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Circuit</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Circuit_name"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Country_id"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Province"></label>
                    </div>
                    <div class="col">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Street"></label>
                    </div>
                    <div class="col">
                        <label asp-for="House_number"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Length"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <input asp-for="Circuit_name" class="form-control" />
                        <span asp-validation-for="Circuit_name" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="Country_id" class="form-control" />
                        <span asp-validation-for="Country_id" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="Province" class="form-control" />
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="House_number" class="form-control" />
                        <span asp-validation-for="House_number" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="Length" class="form-control" />
                        <span asp-validation-for="Length" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}